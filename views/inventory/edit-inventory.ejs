<div class="inv-add-inventory">
  <h1><%= title %></h1>

  <div class="flash-message"><%- messages() %></div>

  <% const errorList = Array.isArray(errors) ? errors : (errors && typeof
  errors.array === "function" ? errors.array() : []) %> <% if (errorList.length)
  { %>
  <ul class="notice" aria-live="polite">
    <% errorList.forEach(err => { %>
    <li><%= err.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <form method="post" action="/inv/update" class="inv-form" id="updateForm">
    <fieldset>
      <legend>Edit Vehicle Details</legend>

      <input type="hidden" name="inv_id" value="<%= inv_id %>" />

      <label for="classificationList">Classification</label>
      <%- classificationSelect %>

      <label for="inv_make">Make</label>
      <input
        id="inv_make"
        name="inv_make"
        required
        minlength="3"
        pattern="^[A-Za-z0-9][A-Za-z0-9 \\-]{1,49}$"
        value="<%= inv_make %>"
      />

      <label for="inv_model">Model</label>
      <input
        id="inv_model"
        name="inv_model"
        required
        minlength="3"
        pattern="^[A-Za-z0-9][A-Za-z0-9 \\-]{1,49}$"
        value="<%= inv_model %>"
      />

      <label for="inv_year">Year</label>
      <input
        id="inv_year"
        name="inv_year"
        type="number"
        min="1900"
        max="2100"
        required
        value="<%= inv_year %>"
      />

      <label for="inv_price">Price (USD)</label>
      <input
        id="inv_price"
        name="inv_price"
        type="number"
        min="0"
        step="0.01"
        required
        value="<%= inv_price %>"
      />

      <label for="inv_miles">Mileage</label>
      <input
        id="inv_miles"
        name="inv_miles"
        type="number"
        min="0"
        step="1"
        required
        value="<%= inv_miles %>"
      />

      <label for="inv_color">Color</label>
      <input
        id="inv_color"
        name="inv_color"
        required
        pattern="^[A-Za-z ]{3,30}$"
        value="<%= inv_color %>"
      />

      <label for="inv_image">Image Path</label>
      <input
        id="inv_image"
        name="inv_image"
        type="text"
        required
        value="<%= inv_image %>"
      />

      <label for="inv_description">Description</label>
      <textarea
        id="inv_description"
        name="inv_description"
        required
        minlength="10"
        maxlength="2000"
      ><%= inv_description %></textarea>

      <label for="inv_thumbnail">Thumbnail Path</label>
      <input
        id="inv_thumbnail"
        name="inv_thumbnail"
        type="text"
        required
        value="<%= inv_thumbnail %>"
      />
    </fieldset>

    <button type="submit" class="btn" id="updateBtn" disabled>
      Update Vehicle
    </button>
  </form>
  <script src="/js/inv-update.js"></script>
</div>

<%- include('../partials/footer') %>
