<div class="inv-add-inventory">
  <h1>Add New Vehicle</h1>

  <div class="flash-message"><%- messages() %></div>

  <% const errorList = Array.isArray(errors) ? errors : (errors && typeof
  errors.array === "function" ? errors.array() : []) %> <% if (errorList.length)
  { %>
  <ul class="notice" aria-live="polite">
    <% errorList.forEach(err => { %>
    <li><%= err.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <form method="post" action="/inv/add-inventory" class="inv-form">
    <fieldset>
      <legend>Vehicle Details</legend>

      <label for="classificationList">Classification</label>
      <%- classificationList %>

      <label for="inv_make">Make</label>
      <input
        id="inv_make"
        name="inv_make"
        required
        placeholder="Min of 3 characters"
        minlength="3"
        pattern="^[A-Za-z0-9][A-Za-z0-9 \-]{1,49}$"
        title="2–50 characters, letters/numbers/spaces/hyphens"
        value="<%= inv_make %>"
      />

      <label for="inv_model">Model</label>
      <input
        id="inv_model"
        name="inv_model"
        required
        placeholder="Min of 3 characters"
        minlength="3"
        pattern="^[A-Za-z0-9][A-Za-z0-9 \-]{1,49}$"
        title="2–50 characters, letters/numbers/spaces/hyphens"
        value="<%= inv_model %>"
      />

      <label for="inv_year">Year</label>
      <input
        id="inv_year"
        name="inv_year"
        type="number"
        placeholder="4-digit year"
        min="1900"
        max="2100"
        required
        value="<%= inv_year %>"
      />

      <label for="inv_price">Price (USD)</label>
      <input
        id="inv_price"
        name="inv_price"
        type="number"
        min="0"
        step="0.01"
        placeholder="decimal or integer"
        required
        value="<%= inv_price %>"
      />

      <label for="inv_miles">Mileage</label>
      <input
        id="inv_miles"
        name="inv_miles"
        type="number"
        min="0"
        step="1"
        placeholder="digits only"
        required
        value="<%= inv_miles %>"
      />

      <label for="inv_color">Color</label>
      <input
        id="inv_color"
        name="inv_color"
        required
        pattern="^[A-Za-z ]{3,30}$"
        title="3–30 letters/spaces"
        value="<%= inv_color %>"
      />

      <label for="inv_image">Image Path</label>
      <input
        id="inv_image"
        name="inv_image"
        required
        type="text"
        value="<%= inv_image %>"
      />

      <label for="inv_description">Description</label>
      <textarea
        id="inv_description"
        name="inv_description"
        required
        minlength="10"
        maxlength="2000"
      >
<%= inv_description %></textarea
      >
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input
        id="inv_thumbnail"
        name="inv_thumbnail"
        required
        type="text"
        value="<%= inv_thumbnail %>"
      />

    </fieldset>

    <button type="submit" class="btn">Save Vehicle</button>
  </form>
</div>
