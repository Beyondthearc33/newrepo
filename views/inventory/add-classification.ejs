
<div class="inv-add-classification">
  <h1>Add New Classification</h1>

  <div class="flash-message"><%- messages() %></div>

  <%
  const errorList = Array.isArray(errors)
    ? errors
    : (errors && typeof errors.array === "function" ? errors.array() : [])
%>
<% if (errorList.length) { %>
  <ul class="notice" aria-live="polite">
    <% errorList.forEach(err => { %>
      <li><%= err.msg %></li>
    <% }) %>
  </ul>
<% } %>

  <p>
    The classification name cannot contain spaces or special characters.
  </p>

 <form
  method="post"
  action="/inv/add-classification"
  class="inv-form"
  novalidate
>
  <label for="classification_name">Classification Name</label>
  <input
    type="text"
    id="classification_name"
    name="classification_name"
    required
    pattern="^[A-Za-z0-9]+$"
    title="Only letters and numbers â€” no spaces or special characters."
    value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
  />

  <button type="submit" class="btn">Save Classification</button>
</form>
</div>