<main class="account-update">
  <h1><%= title %></h1>

  <div class="flash-message"><%- messages() %></div>

  <% const errorList = Array.isArray(errors) ? errors : (errors && typeof
  errors.array === "function" ? errors.array() : []) %> <% if (errorList.length)
  { %>
  <ul class="notice" aria-live="polite">
    <% errorList.forEach(err => { %>
    <li><%= err.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <form method="post" action="/account/update" class="account-form">
    <fieldset>
      <legend>Account Update</legend>

      <input type="hidden" name="account_id" value="<%= account_id %>" />

      <label for="account_firstname">First Name</label>
      <input
        id="account_firstname"
        name="account_firstname"
        type="text"
        required
        value="<%= account_firstname %>"
      />

      <label for="account_lastname">Last Name</label>
      <input
        id="account_lastname"
        name="account_lastname"
        type="text"
        required
        value="<%= account_lastname %>"
      />

      <label for="account_email">Email</label>
      <input
        id="account_email"
        name="account_email"
        type="email"
        required
        value="<%= account_email %>"
      />
    </fieldset>

    <button type="submit" class="btn">Update Account</button>
  </form>

  <form method="post" action="/account/update-password" class="account-form">
    <fieldset>
      <legend>Change Password</legend>

      <input type="hidden" name="account_id" value="<%= account_id %>" />

      <label for="account_password">New Password</label>
      <input
        id="account_password"
        name="account_password"
        type="password"
        required
        minlength="12"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W_]).{12,}"
        title="Minimum 12 characters with at least 1 uppercase letter, 1 lowercase letter, 1 number, and 1 special character."
      />

      <p>
        Entering a password here will replace your current password. Make sure
        it meets the requirements shown.
      </p>
    </fieldset>

    <button type="submit" class="btn">Change Password</button>
  </form>
</main>


